             android:layout_width="50dp"
             android:layout_height="wrap_content"
             app:srcCompat="@drawable/pencil"
             android:layout_marginRight="8dp"
             android:id="@+id/button_edit"/>

         <ImageButton
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             app:srcCompat="@drawable/edit"
             android:layout_marginRight="8dp"
             android:id="@+id/button_delete"/>


     </LinearLayout>

</RelativeLayout>